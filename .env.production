# Production Environment Configuration for BetterMan

# Application
ENVIRONMENT=production
APP_NAME=BetterMan
APP_VERSION=1.0.0
DEBUG=false

# Database
DATABASE_URL=postgresql://betterman:${POSTGRES_PASSWORD}@postgres:5432/betterman
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your_secure_redis_password_here

# Security
SECRET_KEY=your_super_secure_secret_key_min_32_chars
JWT_SECRET_KEY=your_jwt_secret_key_for_tokens
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# CORS
CORS_ORIGINS=https://betterman.dev,https://www.betterman.dev,https://api.betterman.dev

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GRAFANA_PASSWORD=your_secure_grafana_password

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/betterman.dev.crt
SSL_KEY_PATH=/etc/nginx/ssl/betterman.dev.key

# Performance
WORKERS=4
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# Search
SEARCH_INDEX_BATCH_SIZE=1000
SEARCH_CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Email (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=noreply@betterman.dev
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@betterman.dev

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=betterman-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# CDN
CDN_URL=https://cdn.betterman.dev
STATIC_URL=https://static.betterman.dev

# Documentation
DOCS_URL=https://docs.betterman.dev
API_DOCS_URL=https://api.betterman.dev/docs
