{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "app/workers/Dockerfile.extractor"
  },
  "deploy": {
    "cronSchedule": "0 3 * * *",
    "restartPolicyType": "NEVER",
    "env": {
      "PYTHON_VERSION": "3.12",
      "EXTRACTION_MODE": "incremental"
    }
  }
}