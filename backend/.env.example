# BetterMan Environment Configuration Example
# Copy this file to .env and update with your values

# Security
SECRET_KEY=your-secret-key-here-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-here-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite:///./data/betterman.db
# For production use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/betterman

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Application
APP_NAME=BetterMan
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=false
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# API Configuration
API_V1_PREFIX=/api/v1
API_V2_PREFIX=/api/v2
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
REQUEST_MAX_SIZE=10485760  # 10MB

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# Email (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@betterman.io

# OAuth2 Providers (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Storage
UPLOAD_MAX_SIZE=5242880  # 5MB
ALLOWED_UPLOAD_EXTENSIONS=.txt,.md,.pdf

# AI Features (optional)
OPENAI_API_KEY=
AI_SEARCH_ENABLED=false
EMBEDDING_MODEL=text-embedding-ada-002

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_AUTH=false
ENABLE_EXPORT=true
ENABLE_COLLABORATIVE_NOTES=false
MAINTENANCE_MODE=false