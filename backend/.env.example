# BetterMan Backend Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME=BetterMan
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Database
DATABASE_URL=sqlite:///./data/betterman.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/betterman
DATABASE_POOL_SIZE=10
DATABASE_POOL_RECYCLE=3600
DATABASE_POOL_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/betterman/app.log

# Security
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_SEARCH=30/minute
RATE_LIMIT_IMPORT=10/minute

# Caching
CACHE_DIR=.cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Search
SEARCH_MIN_LENGTH=2
SEARCH_MAX_RESULTS=100
SEARCH_DEFAULT_LIMIT=20

# Performance
REQUEST_TIMEOUT=30
MAX_REQUEST_SIZE=10485760

# Monitoring
METRICS_ENABLED=true
METRICS_PREFIX=betterman
HEALTH_CHECK_INTERVAL=60

# Optional: API Keys (if implementing authentication)
# API_KEY_SALT=your-random-salt-here
# JWT_SECRET_KEY=your-secret-key-here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_MINUTES=10080